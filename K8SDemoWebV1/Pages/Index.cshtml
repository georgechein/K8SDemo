<script type="text/javascript">
    
    $(document).ready(function () {
        var apiUrl = "@Model.apiIp/log";
        //var data = getFakeData();
        //drawTable(data);
        postLog(apiUrl);
    });
    function postLog(apiUrl) { 
        var requestLog = { webIp: "@Model.webIp" };
        $.ajax({
            type: "POST",
            data: JSON.stringify(requestLog),
            url: apiUrl,
            contentType: "application/json",
            success: function (data) { getLog(apiUrl); },
            failure: function (data) { console.log(data.responseText); },
            error: function (data) { console.log(data.responseText); }
        });
    }
    function getLog(apiUrl) {
        $.ajax({
            type: "GET",
            data: "",
            url: apiUrl,
            contentType: "application/json",
            success: function (data) { drawTable(data); },
            failure: function (data) { console.log(data.responseText); },
            error: function (data) { console.log(data.responseText); }
        });
    }
    function drawTable(data) { 
        console.log(data);
        $("#tableBody").html('');
        var rows = "";
        $.each(data, function (i, item) {
            var row = "<tr>" +
                "<td>" + item.id + "</td>" +
                "<td>" + item.webIp + "</td>" +
                "<td>" + item.apiIp + "</td>" +
                "<td>" + item.createdOn.toString("yyyy-MM-dd HH:mm:ss") + "</td>" +
                "</tr>";
            rows += row;
        });
        $('#tableBody').append(rows);
    }
